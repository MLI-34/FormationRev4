{% extends 'base.html.twig' %}

{% block title %}Categorie index{% endblock %}

{% block body %}
   <div class="container">
       <div class="row">
           <div class="col-12">
            <h1 class="text-center">Liste des catégories</h1>
            <div class="text-center">
                <a href="{{ path('categorie_new') }}" class="btn btn-success my-3"><i class="fa fa-plus"></i> Ajout Catégorie</a>
            </div>
            <table class="table">
                <thead>
                    <tr>
                        <th>Id</th>
                        <th>Label</th>
                        <th>Photo</th>
                        <th>Description</th>
                        <th>actions</th>
                    </tr>
                </thead>
                <tbody>
                {% for categorie in categories %}
                    <tr>
                        <td>{{ categorie.id }}</td>
                        <td>{{ categorie.label }}</td>
                        <td><img width="50" height="50" class="rounded rounded-circle border border-3 border-dark" src="{{ asset('assets/uploads/categories/') }}{{ categorie.photo }}"></td>
                        <td>{{ categorie.description }}</td>
                        <td>
                            <a href="{{ path('categorie_show', {'id': categorie.id}) }}" class="btn btn-primary"><i class="fa fa-eye"></i></a>
                            <a href="{{ path('categorie_edit', {'id': categorie.id}) }}" class="btn btn-warning"><i class="fa fa-edit"></i></a>
                        </td>
                    </tr>
                {% else %}
                    <tr>
                        <td colspan="5">Pas de catégories</td>
                    </tr>
                {% endfor %}
                </tbody>
            </table>
           </div>
       </div>
   </div>

    
{% endblock %}
