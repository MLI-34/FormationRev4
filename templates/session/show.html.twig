{% extends 'base.html.twig' %} {% block title %}Session{% endblock %} {% block
body %}
<div class="container">
  <div class="row">
    <div class="col-12">
      <h1 class="text-center">Session</h1>

      <table class="table">
        <tbody>
          <tr>
            <th>Id</th>
            <td>{{ session.id }}</td>
          </tr>
          <tr>
            <th>Label</th>
            <td>{{ session.label }}</td>
          </tr>
          <tr>
            <th>Photo</th>
            <td>
              <img
                width="50px"
                height="50px"
                src="{{ asset('assets/uploads/sessions/') }}{{ session.photo }}"
                alt=""
                class="rounded rounded-circle border border-5 border-dark"
              />
            </td>
          </tr>
          <tr>
            <th>Description</th>
            <td>{{ session.description }}</td>
          </tr>
          <tr>
            <th>Prix</th>
            <td>{{ session.prix }} â‚¬</td>
          </tr>
          <tr>
            <th>Date Debut</th>
            <td>
              {{ session.dateDebut ? session.dateDebut|date('d-m-Y') : '' }}
            </td>
          </tr>
          <tr>
            <th>Date Fin</th>
            <td>{{ session.dateFin ? session.dateFin|date('d-m-Y') : '' }}</td>
          </tr>
        </tbody>
      </table>

      <div class="row">
        <div class="col-4">
          <a href="{{ path('session_index') }}" class="btn btn-primary"
            >Retour</a
          >

          <a
            href="{{ path('session_edit', { id: session.id }) }}"
            class="btn btn-warning"
            >Modifier</a
          >

          {{ include("session/_delete_form.html.twig") }}
        </div>
      </div>
    </div>
  </div>
</div>
{% endblock %}
